{
  "name": "write_file",
  "description": "写入内容到文件",
  "parameters": {
    "type": "object",
    "properties": {
      "file_path": {
        "type": "string",
        "description": "文件的完整路径"
      },
      "content": {
        "type": "string",
        "description": "要写入的内容"
      },
      "encoding": {
        "type": "string",
        "description": "文件编码，默认为utf-8",
        "default": "utf-8"
      }
    },
    "required": ["file_path", "content"]
  },
  "handler": "file.write",
  "enabled": true
}
