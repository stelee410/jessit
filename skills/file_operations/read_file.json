{
  "name": "read_file",
  "description": "读取文本文件内容",
  "parameters": {
    "type": "object",
    "properties": {
      "file_path": {
        "type": "string",
        "description": "文件的完整路径"
      },
      "encoding": {
        "type": "string",
        "description": "文件编码，默认为utf-8",
        "default": "utf-8"
      }
    },
    "required": ["file_path"]
  },
  "handler": "file.read",
  "enabled": true
}
